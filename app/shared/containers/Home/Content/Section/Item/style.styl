.item
  width: 220px
  height: 100%
  background-color: #707070
  background-repeat no-repeat
  background-position: center
  background-size cover
  margin-left 10px
  position: relative
  display-inline-block()
  &.disabled
    background-color: #363636
  &:first-child
    margin-left: 0
  &:focus
    background-color: #fff
    box-shadow #ff1983 0 0 0 3px inset
    .content
      color #000

.content
  font-size: 30px
  color #fff
