.item
  width: 220px
  height: 100%
  background-color: #707070
  background-repeat no-repeat
  background-position: center
  background-size cover
  margin-left 20px
  position: relative
  border-radius 3px
  transition -webkit-transform 0.23s
  box-shadow rgba(#000, 0.6) 0 1px 2px
  display-inline-block()
  &.disabled
    background-color: #363636
  &:first-child
    margin-left: 0
  &:focus
    background-color: #fff
    transform scale(1.05)
    box-shadow #fff 0 0 0 3px inset
    .content
      font-size: 80px
      color #fff

.content
  font-size: 50px
  font-weight: 600
  color rgba(#000, 0.4)
